@model OwaspSAMM.DAL.UserData

@{
    ViewBag.Title = "Transfer";
}

<h2>Transfer</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Transfer User Assessments</h4>
        <hr />
        <p>
            <em>By choosing a new owner and clicking 'Save', all existing assessments for this user will be transferred to the new owner </em>
        </p>
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.UserID)

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserNTID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserNTID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserDomain)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserDomain)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ManagerID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ManagerID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MgrLastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MgrLastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MgrFirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MgrFirstName)
            </dd>



        </dl>


        <div class="form-group">
            <label class="control-label col-md-2">New Owner</label>
            @*@Html.LabelFor(model => model.OwnerID, "OwnerID", htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.DropDownList("OwnerID", string.Empty)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
